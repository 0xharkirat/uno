<Project ToolsVersion="15.0">

  <!--
  UnoUIDisableNet7Build is used during CI for disabling .NET 5 package generation
  until completing the switch to .NET 5. Double building .NET 5 adds some significant
  build time, and concurrency issues with the netstandad2.0 build.
  -->
  
  <PropertyGroup Condition="'$(UnoUIDisableNet7Build)'=='' and ('$(MSBuildRuntimeType)'=='Core' or '$(MSBuildVersion)' &gt;= '16.8')">
	<TargetFrameworks>$(TargetFrameworks);net7.0-tizen</TargetFrameworks>
	<TargetFrameworksCI>$(TargetFrameworks);net7.0-tizen</TargetFrameworksCI>
  </PropertyGroup>

  <Choose>
	<When Condition="'$(UnoTargetFrameworkOverride)'=='netstandard2.0'">
	  <PropertyGroup>
		<TargetFrameworks>net6.0-tizen</TargetFrameworks>
	  </PropertyGroup>
	</When>
	<When Condition="'$(UnoTargetFrameworkOverride)'!=''">
	  <PropertyGroup>
		<TargetFrameworks>$(UnoTargetFrameworkOverride)</TargetFrameworks>
		<TargetFrameworks Condition="'$(TargetFrameworks)'=='net5.0'">$(TargetFrameworks)-tizen</TargetFrameworks>
		<TargetFrameworks Condition="'$(TargetFrameworks)'=='net6.0'">$(TargetFrameworks)-tizen</TargetFrameworks>
		<TargetFrameworks Condition="'$(TargetFrameworks)'=='net7.0'">$(TargetFrameworks)-tizen</TargetFrameworks>
	  </PropertyGroup>
	</When>
  </Choose>

</Project>
