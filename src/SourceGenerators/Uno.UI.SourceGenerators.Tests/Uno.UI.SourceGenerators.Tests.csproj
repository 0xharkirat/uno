<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net461;net6.0</TargetFrameworks>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<TreatWarningsAsErrors>true</TreatWarningsAsErrors>
		<NoWarn>$(NoWarn);NU1608</NoWarn>
		<AssemblyName>Uno.UI.SourceGenerators.Tets.$(TargetFramework)</AssemblyName>
	</PropertyGroup>

	<ItemGroup Label="GlobalUsings">
		<Using Include="Microsoft.VisualStudio.TestTools.UnitTesting" />
		<Using Include="FluentAssertions" />
		<Using Include="FluentAssertions.Execution" />
	</ItemGroup>

	<ItemGroup>
		<Compile Remove="Results\**\*.*" />
		<None Include="Results\**\*.*" />
	</ItemGroup>

	<ItemGroup>
		<Compile Remove="**\*.xaml.cs" />
		<None Include="**\*.xaml.cs" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.0.0" />
		<PackageReference Include="MSTest.TestAdapter" Version="2.2.10" />
		<PackageReference Include="MSTest.TestFramework" Version="2.1.2" />
		<PackageReference Include="coverlet.collector" Version="3.1.2" />
		<PackageReference Include="FluentAssertions" />
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'net461'">
		<PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="3.6" />
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'net6.0'">
		<PackageReference Include="Microsoft.CodeAnalysis.CSharp.SourceGenerators.Testing.MSTest" Version="1.1.1" />
		<PackageReference Include="Microsoft.CodeAnalysis.CSharp.Workspaces" Version="4.1.0" />
		<PackageReference Include="Microsoft.CodeAnalysis" Version="4.1.0" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\Uno.UI.SourceGenerators\Uno.UI.SourceGenerators.csproj" />
	</ItemGroup>

</Project>
