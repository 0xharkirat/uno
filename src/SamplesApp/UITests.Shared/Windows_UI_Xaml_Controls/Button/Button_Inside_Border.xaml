<UserControl
	x:Class="Uno.UI.Samples.Content.UITests.ButtonTestsControl.Button_Inside_Border"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	d:DesignHeight="300"
	d:DesignWidth="400">

	<StackPanel>
		<Border Background="Pink" Padding="16" Tapped="Border_Tapped" RightTapped="Border_RightTapped" Holding="Border_Holding">
			<Button Content="asd" Tapped="Button_Tapped" RightTapped="Button_RightTapped" Holding="Button_Holding" />
		</Border>
		<ScrollViewer>
			<TextBlock x:Name="tb" Text="Tapped calls:" />
		</ScrollViewer>
	</StackPanel>

</UserControl>
