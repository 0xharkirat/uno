<Page
    x:Class="UITests.Windows_UI_Xaml_Controls.AutoSuggestBoxTests.AutoSuggestBox_KeyboardFocus"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UITests.Windows_UI_Xaml_Controls.AutoSuggestBoxTests"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<ScrollViewer Grid.Row="1">

			<StackPanel Spacing="8">
				<Button>No-op</Button>
				<!-- Auto Suggest Box -->
				<AutoSuggestBox x:Name="AutocompleteInput"
                                Text="{Binding AutoCompleteInput, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                PlaceholderText="Residential Address"
                                ItemsSource="{Binding AutoCompletedPredictions}"
                                VerticalAlignment="Top"
                                Margin="8"/>
				
			</StackPanel>
		</ScrollViewer>
	</Grid>
</Page>
